<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_gravity="top"
    android:paddingBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            tools:text="NovoRapid"
            android:id="@+id/nombreInsulinaTV"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="end"
            android:textColor="@color/purple_500"
            android:id="@+id/rapidaTV"
            tools:text="RAPIDA"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".55"
            android:layout_height="wrap_content"
            android:textColor="@color/purple_500"
            android:gravity="start"
            android:id="@+id/laboratorioTV"
            tools:text="NovoNordisk"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".45"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:gravity="end"
                android:id="@+id/duracionMinTV"
                tools:text="180"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="@string/minutes_short" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="@string/duration_separator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:layout_marginRight="2dp"
                android:gravity="end"
                android:id="@+id/duracionHorasTV"
                tools:text="3.00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_500"
                android:text="@string/hours_short" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>